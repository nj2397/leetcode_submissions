class Solution {
public: 
	int firstBadVersion(int n){
		int left = 1, right = n;
		while(left <= right){
			if(isBadVersion(left))
				return left;
			int mid = left + (right - left)/2;
		
			if(isBadVersion(mid) && !isBadVersion(mid-1))
				return mid;

			if(isBadVersion(mid) && isBadVersion(mid-1)){
				right = mid - 1;
				continue;
			}
		
			if(!isBadVerion(mid)){
				left = mid + 1;
				continue;
			}
		}	

		return -1;
	}
};
	
