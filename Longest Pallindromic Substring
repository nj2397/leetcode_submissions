class Solution {
public:
	bool checkPallindrome(string ns){
		for(int i=0; i<ns.length()/2; i++){
			if(ns[i] != ns[ns.length()-i-1])
				return false;
		}
		return true;
	}
		
	string longestPallindrome(string s) {
		string ns="", result = "";
		int p = 0;
		
		while(p < s.length()) {
			for(int i=p; i<s.length(); i++) {
				ns += s[i];
				if(checkPallindrome(ns)){
					if(result.length() < ns.length())
						result = ns;
				}
			}
			p++;
			ns.clear();
		}
		return result;
	}
};
